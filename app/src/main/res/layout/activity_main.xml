<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu transaccÃ³n:"
        android:id="@+id/et"
        android:maxLength="16"/>

    <ImageButton
        android:id="@+id/backspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_backspace_black_24dp"
        android:layout_alignParentRight="true"
        android:background="#00000000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/one"
            android:src="@drawable/one24dp"
            android:layout_marginLeft="0dp"
            android:background="#00ffffff"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/two"
            android:layout_marginLeft="80dp"
            android:src="@drawable/two24dp"
            android:background="#00ffffff"/>
        
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/three"
            android:src="@drawable/three24dp"
            android:layout_marginLeft="160dp"
            android:background="#00ffffff"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/four"
            android:src="@drawable/four24dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:background="#00ffffff"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/five"
            android:src="@drawable/five24dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="80dp"
            android:background="#00ffffff"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/six"
            android:src="@drawable/six24dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="160dp"
            android:background="#00ffffff"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/seven24dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="160dp"
            android:background="#00ffffff"
            android:id="@+id/seven"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/eight24dp"
            android:background="#00ffffff"
            android:id="@+id/eight"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="160dp"
            android:background="#00ffffff"
            android:id="@+id/nine"
            android:src="@drawable/nine24dp"/>
        
    </RelativeLayout>

</RelativeLayout>